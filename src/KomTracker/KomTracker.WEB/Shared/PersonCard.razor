@if (_loaded)
{
    <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Image="https://dgalywyr863hv.cloudfront.net/pictures/athletes/2394302/743571/2/medium.jpg" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@_user.FirstName @_user.LastName</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
}
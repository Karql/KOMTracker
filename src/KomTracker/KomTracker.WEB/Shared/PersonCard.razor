@if (_loaded)
{
    <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar>
                    <MudImage Src="@_user.Avatar" />
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@_user.FirstName @_user.LastName</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
}